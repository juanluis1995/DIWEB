{% extends "base.html.twig" %}

{# {% block title %}Log in!{% endblock %} #}

{% block body %}

<section class="page-section col-lg-12" id="loguearse">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Formulario de Login</h2>
        </div>

        <form method="post" class="formLogin">

            {% if error %}
                <div class="alert alert-danger">  {{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
                <div class="mb-3 text-light">
                    {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
        
            {% else %}
                <label for="inputNombre" class="text-light">Nombre</label>
                <input type="text" {# value=" {{ last_username }} " #} name="nombre" id="inputNombre" class="form-control" placeholder="Usuario" required>
                <label for="inputPassword" class="text-light">Contraseña</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
        
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
        
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="text-center">
                    <button class="btn btn-lg btn-primary" type="submit" style="margin-top: 5%;">
                        Acceder
                    </button>
                    <a class="btn btn-lg" style="margin-top: 5%;" href="{{ path('index') }}">Volver</a>
                </div>
            {% endif %}
            
        </form>
        
    </div>
</section>



{% endblock %}
